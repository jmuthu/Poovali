<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="5dip">

    <ImageView
        android:id="@+id/event_type_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dip"
        android:background="@drawable/border_image"
        android:scaleType="centerCrop"
        android:src="@drawable/tomato_detail" />

    <TextView
        android:id="@+id/event_type"
        style="@android:style/TextAppearance.Material.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_toEndOf="@id/event_type_icon" />

    <TextView
        android:id="@+id/event_description"
        style="@android:style/TextAppearance.Material.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_type"
        android:layout_marginTop="5dip"
        android:layout_toStartOf="@+id/event_created_date"
        android:layout_toEndOf="@id/event_type_icon"
        android:ellipsize="end"
        android:maxLines="1" />

    <TextView
        android:id="@+id/event_created_date"
        style="@android:style/TextAppearance.Material.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/event_description"
        android:layout_alignBottom="@+id/event_description"
        android:layout_alignParentEnd="true"
        android:text="1 Batch" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_alignEnd="@+id/event_created_date"
        android:layout_alignStart="@+id/event_type"
        android:layout_below="@+id/event_created_date"
        android:layout_marginTop="15dp"
        android:background="@color/lineDivider" />
</RelativeLayout>