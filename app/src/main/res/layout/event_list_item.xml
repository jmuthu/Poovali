<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="5dip">

    <ImageView
        android:id="@+id/plant_type_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="10dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/batch"
        style="@android:style/TextAppearance.Material.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/plant_type_icon" />

    <ImageView
        android:id="@+id/event_type_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="5dip"
        android:layout_toEndOf="@id/plant_type_icon"
        android:layout_below="@id/batch"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/event_type"
        style="@android:style/TextAppearance.Material.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/batch"
        android:layout_toEndOf="@id/event_type_icon" />

    <TextView
        android:id="@+id/event_created_date"
        style="@android:style/TextAppearance.Material.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/event_type"
        android:layout_alignBottom="@+id/event_type"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/event_description"
        style="@android:style/TextAppearance.Material.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_type"
        android:layout_marginBottom="10dip"
        android:layout_toEndOf="@+id/event_type_icon"
        android:ellipsize="end"
        android:maxLines="1" />
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_alignEnd="@+id/event_created_date"
        android:layout_alignStart="@+id/batch"
        android:layout_alignParentBottom="true"
        android:background="@color/lineDivider" />
</RelativeLayout>