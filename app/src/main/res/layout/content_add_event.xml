<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:id="@+id/content_add_event"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        tools:context="org.onestraw.poovali.activity.AddEventActivity"
        tools:showIn="@layout/activity_add_event">

        <TextView
            android:id="@+id/event_type_label"
            style="@style/AddEventLabel"
            android:text="@string/event_type" />

        <Spinner
            android:id="@+id/event_type_spinner"
            style="@style/ThemeSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_type_label"
            android:focusable="true" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_alignEnd="@+id/event_type_spinner"
            android:layout_alignStart="@+id/event_type_spinner"
            android:layout_below="@+id/event_type_spinner"
            android:background="@color/underline" />

        <TextView
            android:id="@+id/plant_label"
            style="@style/AddEventLabel"
            android:layout_below="@+id/event_type_spinner"
            android:text="@string/plant_label" />

        <Spinner
            android:id="@+id/plant_type_spinner"
            style="@style/ThemeSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/plant_label" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_alignEnd="@+id/plant_type_spinner"
            android:layout_alignStart="@+id/plant_type_spinner"
            android:layout_below="@+id/plant_type_spinner"
            android:background="@color/underline" />

        <TextView
            android:id="@+id/date_label"
            style="@style/AddEventLabel"
            android:layout_below="@+id/plant_type_spinner"
            android:text="@string/created_on" />

        <TextView
            android:id="@+id/date"
            style="@android:style/TextAppearance.Material.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_label"
            android:padding="5dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:onClick="showDatePickerDialog" />

        <View
            android:id="@+id/date_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_alignEnd="@+id/date"
            android:layout_alignStart="@+id/date"
            android:layout_below="@id/date"
            android:background="@color/underline" />

        <TextView
            android:id="@+id/time"
            style="@android:style/TextAppearance.Material.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date_label"
            android:padding="5dp"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@id/date"
            android:gravity="center"
            android:onClick="showTimePickerDialog" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_alignEnd="@+id/time"
            android:layout_alignStart="@+id/time"
            android:layout_below="@+id/time"
            android:background="@color/underline" />

        <TextView
            android:id="@+id/event_description_label"
            style="@style/AddEventLabel"
            android:layout_below="@+id/time"
            android:text="@string/event_description" />

        <EditText
            android:id="@+id/event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_description_label"
            android:backgroundTint="@color/underline"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="2000"
            android:maxLines="4"
            android:minLines="1"
            android:padding="5dp"
            android:labelFor="@id/event_description"
            android:textCursorDrawable="@drawable/cursor" />
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
