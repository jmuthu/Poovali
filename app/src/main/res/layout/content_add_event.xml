<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="org.onestraw.poovali.AddEventActivity"
    tools:showIn="@layout/activity_add_event">
    <TextView
        android:id="@+id/date_label"
        android:layout_marginTop="20dip"
        style="@style/AddEventLabel"
        android:text="@string/created_on" />
    <TextView
        android:id="@+id/date"
        android:layout_width="@dimen/date"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_below="@+id/date_label"
        android:drawableEnd="@android:drawable/ic_input_add"
        android:onClick="showDatePickerDialog"
        style="@android:style/TextAppearance.Material.Subhead"/>
    <View
        android:id="@+id/date_line"
        android:layout_width="@dimen/date"
        android:layout_height="1dp"
        android:layout_below="@id/date"
        android:background="@android:color/darker_gray" />
    <!--ImageButton
        android:id="@+id/dateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/ic_input_add"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/date"
        android:onClick="showDatePickerDialog" /-->
    <TextView
        android:id="@+id/time"
        android:layout_width="@dimen/time"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_below="@+id/date_label"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@id/date"
        android:gravity="end"
        android:drawableEnd="@android:drawable/ic_input_add"
        android:onClick="showTimePickerDialog"
        style="@android:style/TextAppearance.Material.Subhead"/>
    <View
        android:layout_width="@dimen/time"
        android:layout_height="1dp"
        android:layout_marginStart="25dp"
        android:layout_below="@+id/time"
        android:layout_toEndOf="@id/date"
        android:background="@android:color/darker_gray" />
    <TextView
        android:id="@+id/event_type_label"
        android:layout_below="@+id/date_line"
        android:layout_marginTop="20dip"
        style="@style/AddEventLabel"
        android:text="@string/event_type" />
    <Spinner
        android:id="@+id/event_type_spinner"
        style="@android:style/TextAppearance.Material.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_below="@+id/event_type_label"/>
    <EditText
        android:id="@+id/event_description"
        android:layout_below="@+id/event_type_spinner"
        android:layout_marginTop="20dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLength="2000"
        android:maxLines="4"
        android:padding="5dip"
        android:background="@drawable/edit_text_border"
        android:hint="@string/event_description_hint"/>
    <!--ImageButton
        android:id="@+id/timeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:layout_below="@id/date"
        android:layout_toEndOf="@+id/time"
        android:layout_marginStart="5dp"
        android:background="@android:drawable/ic_input_add"
        android:onClick="showDatePickerDialog" /-->
</RelativeLayout>
