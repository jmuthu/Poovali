<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:padding="7dp"
    android:background="@drawable/border_image">

    <TextView
        android:id="@+id/batch"
        android:layout_marginTop="5dp"
        style="@android:style/TextAppearance.Material.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/batch_status"
        style="@android:style/TextAppearance.Material.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/batch"
        android:layout_alignBottom="@+id/batch"
        android:layout_alignParentEnd="true" />

    <ProgressBar
        android:id="@+id/batch_status_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleY="1.5"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        style="@android:style/Widget.Material.ProgressBar.Horizontal"
        android:progressTint="@android:color/holo_green_dark"
        android:progressBackgroundTint="@android:color/holo_green_light"
        android:layout_below="@id/batch" />

</RelativeLayout>