<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.onestraw.poovali">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/watering_can"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PlantListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlantDetailActivity"
            android:label="@string/title_activity_plant_detail"
            android:parentActivityName=".PlantListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.onestraw.poovali.PlantListActivity" />
        </activity>
        <activity
            android:name=".AddEventActivity"
            android:label="@string/title_activity_add_event"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>